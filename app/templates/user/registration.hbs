<div class="registration__container">
  <div class="card">
    <div class="form-container">
      <div class="title header__title">
        Book Your Slot & Get Vaccinated
      </div>
      <form>
        <div class="form__input">
          <div class="select-field">
            <div class="name">City</div>
            <select onchange={{action "selectCity" value="target.value"}}>
              {{#each cityData as |city|}}
                <option value={{city.cityID}}>{{city.name}}</option>
              {{/each}}
            </select>
          </div>

          <div class="select-field">
            <div class="name">Date</div>

            <select onchange={{action "selectDate" value="target.value"}}>
              {{#each availDates as |date|}}
                <option value={{date}}>{{date}}</option>
              {{/each}}
            </select>
          </div>
          <div class="select-field">
            <div class="name">Date</div>
            <select onchange={{action "selectSession" value="target.value"}}>
              {{#each sessionData as |session|}}
                <option value={{session}}>{{session}}</option>
              {{/each}}
            </select>
          </div>
          <button class="button button--primary" {{action "book"}}>Book</button>

        </div>
      </form>
    </div>
    <div class="image"></div>
  </div>
</div>